﻿# ============================================
# AirGuard - Minimal Environment Config
# (Clean + Only Required Settings)
# ============================================

# --------------------------------------------
# DATABASE
# --------------------------------------------
DATABASE_URL=sqlite:///./airguard.db
REDIS_URL=redis://localhost:6379/0
API_BASE_URL=http://localhost:8001


# --------------------------------------------
# AIR QUALITY API KEYS (Real Data)
# --------------------------------------------
# Get keys from:
# - OpenWeatherMap: https://openweathermap.org/api
# - AirVisual (IQAir): https://www.iqair.com/air-pollution-data-api
# - AQICN: https://aqicn.org/api/
# - OpenAQ:  https://openaq.org/#/api

OPENWEATHER_API_KEY=fcf3ed8bec26380f4215399eadbd8773
AIRVISUAL_API_KEY=your_airvisual_api_key_here
AQICN_API_KEY=your_aqicn_api_key_here
OPENAQ_API_KEY=your_openaq_api_key_here

# --------------------------------------------
# THIRD-PARTY API BASE URLs (no need to change)
# --------------------------------------------
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
AIRVISUAL_BASE_URL=http://api.airvisual.com/v2
AQICN_BASE_URL=https://api.waqi.info
OPENAQ_BASE_URL=https://api.openaq.org/v2

# --------------------------------------------
# BACKEND & DASHBOARD
# --------------------------------------------
# FastAPI backend (same as README)
API_HOST=0.0.0.0
API_PORT=8000

# Dashboard (Plotly/Streamlit etc.)
DASHBOARD_PORT=8050

# Dashboard → Backend URL
API_BASE_URL = "http://localhost:8001"


# If you use a simple fixed token between dashboard & API
API_TOKEN=change-this-demo-token

# --------------------------------------------
# APP CONFIG
# --------------------------------------------
DEBUG=False
LOG_LEVEL=INFO

# --------------------------------------------
# SECURITY / AUTH
# (change values in real deployment)
# --------------------------------------------
SECRET_KEY=change-this-secret-key
JWT_SECRET_KEY=change-this-jwt-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --------------------------------------------
# ML CONFIG
# --------------------------------------------
# Model retrain interval (seconds)
MODEL_UPDATE_INTERVAL=3600
# How many hours ahead to predict
PREDICTION_HORIZON=24
# Minimum confidence for predictions
CONFIDENCE_THRESHOLD=0.8

# --------------------------------------------
# SCHEDULER
# --------------------------------------------
# Air quality data fetch interval (seconds)
DATA_FETCH_INTERVAL=600
# ML model update interval (seconds)
ML_UPDATE_INTERVAL=3600

# --------------------------------------------
# CACHE
# --------------------------------------------
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# --------------------------------------------
# RATE LIMIT
# --------------------------------------------
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
